{{#each data}}
<section style="background-color: #eee;">
  <div class="container my-1 py-1">
    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-10 col-xl-8">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              <div>
                <h6 class="fw-bold text-primary mb-1"> <a href="/api/post/{{this.dataValues.blog_id}}">{{this.dataValues.blog_title}}</a> </h6>
                 <p class="text-muted small mb-0">
                  {{this.dataValues.user.dataValues.user_name}}
                </p>               
                <p class="text-muted small mb-0">
                  created - {{this.dataValues.createdAt}}
                </p>
              </div>
            </div>

            <p class="mt-3 mb-4 pb-2">
              {{this.dataValues.blog_body}}
            </p>
          </div>

{{!-- drop down section to reveal comments --}}
                    <div class="accordion accordion-flush" id="accordionFlushExample">
                      <div class="accordion-item">
                        <h2 class="accordion-header" id="flush-headingOne">
                          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            Comments
                          </button>
                        </h2>
                        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                  <div class="d-flex flex-start p-3">
                      <div class="flex-grow-1 flex-shrink-1">
{{!-- previous comment section --}}
      {{#each comments}}
                        <div>
                          <div class="d-flex justify-content-between align-items-center">
                            <p class="mb-1">
                              {{this.dataValues.user.dataValues.user_name}}
                            </p>
                          </div>
                          <p class="small mb-0">
                            commented "{{this.dataValues.comment_body}}"
                          </p>
                          <span class="small">on - {{this.dataValues.createdAt}}</span>
                        </div>
                        {{/each}}
                        <br>
                        <a href="/api/post/{{this.dataValues.blog_id}}">Post comment</a>

                      </div>
                  </div>
                        </div>
                      </div>
                    </div>

        </div>
      </div>
    </div>
  </div>
</section>
{{/each}}
<script src="/homePage.js"></script>


